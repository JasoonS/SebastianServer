<?php if(!defined('BASEPATH')) exit('no cross scriting is allowed');
class GetStateCity extends CI_Controller
{
	function __construct()
	{
		parent:: __construct();
		$this->load->model('addProperty/getList');
	}
	
	function index()
	{
		$data = array();	
		$result =  $this->getList->getStateCity($this->input->post('OPTION'));
		foreach($result as $row)
		{
			$html="<option value='".echo $row->state->id."'>'".echo $row->state_name.'"</option>"';
			echo $html;
		}

	}

} 
?>
